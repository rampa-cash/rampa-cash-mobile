<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RampaCashMobile" parent="android:Theme.Material.NoActionBar">
        <!-- System UI Configuration for dark theme -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- AndroidX Splash Screen (works on all versions) - Using carbon base theme from Figma -->
        <item name="android:windowSplashScreenBackground">@color/rampa_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/rampa_icon_splash_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>
</resources>